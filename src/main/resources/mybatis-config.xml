<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE configuration  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<!-- type:패키지명.클래스명 alias:별명-->
		<typeAlias type="kr.or.dgit.bigdata.school.dto.Student" alias="Student"/> 
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/school" />
				<property name="username" value="user_school" />
				<property name="password" value="rootroot" />
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<!-- mapper.xml파일이 있는 경로명.파일이름 -->
		<mapper resource="kr/or/dgit/bigdata/school/mapper/StudentMapper.xml" />
	</mappers>
</configuration>